@using MVCEventManager.Models.EventModels
@model EventTimeCreateModel

@{
    ViewData["Title"] = "Create An Event";
}
<h4>Shcedule an event for @Model.DateOnly.ToString("yyyy/MM/dd")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTime">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="DateOnly" type="hidden" />
            <div class="form-floating">
                <input asp-for="Name" placeholder="Name" class="form-control event-create" />
                <label asp-for="Name" class="form-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Description" placeholder="Description" class="form-control event-create" style="height: 250px !important"></textarea>
                <label asp-for="Description" class="form-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="TimeOnly" placeholder="Time" type="time" class="form-control event-create" />
                <label asp-for="TimeOnly" class="form-label"></label>
                <span class="text-danger">@Model.DateAndTimeValidatedText</span>
            </div>
            <div class="form-floating">
                <input asp-for="Location" placeholder="Location" class="form-control event-create" />
                <label asp-for="Location" class="form-label"></label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="MaxAttendees" placeholder="Max Attendees" class="form-control event-create" />
                <label asp-for="MaxAttendees" class="form-label"></label>
                <span asp-validation-for="MaxAttendees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="submit-button">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .event-create {
        height: 60px;
        width: 65%;
        min-width: 500px;
        margin-bottom: 20px;
        margin-top: 20px;
        font-size: 1.2rem;
    }

    .event-create::placeholder {
        font-size: 1.1rem !important;
    }

    .event-create + label {
        font-size: 1.1rem;
    }
</style>