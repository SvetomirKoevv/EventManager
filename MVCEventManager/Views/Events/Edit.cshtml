@using MVCEventManager.Models.EventModels
@model ReturnEventModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Create Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input asp-for="ReturnUrl" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Name" placeholder="Name" class="form-control event-create" />
                <label asp-for="Name" class="form-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="Description" placeholder="Description" class="form-control event-create" style="height: 250px !important"></textarea>
                <label asp-for="Description" class="form-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EventStart" placeholder="Start of Event" class="form-control event-create" />
                <label asp-for="EventStart" class="form-label"></label>
                <span asp-validation-for="EventStart" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Location" placeholder="Location" class="form-control event-create" />
                <label asp-for="Location" class="form-label"></label>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="MaxAttendees" placeholder="Max Attendees" class="form-control event-create" />
                <label asp-for="MaxAttendees" class="form-label"></label>
                <span asp-validation-for="MaxAttendees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="submit-button" style="min-width: 80px;color: black !important;">Edit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    .event-create {
        height: 60px;
        width: 65%;
        min-width: 500px;
        margin-bottom: 20px;
        margin-top: 20px;
        font-size: 1.2rem;
    }

        .event-create::placeholder {
            font-size: 1.1rem !important;
        }

        .event-create + label {
            font-size: 1.1rem;
        }

    @@media(max-width: 512px) {
        .event-create {
            min-width: 90%;
        }
    }
</style>